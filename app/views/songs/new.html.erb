<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <div>
  <%= f.label :title %>
  <%= f.text_field :title %>
  </div><br>

  <div>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  </div><br>

  <div>
  <%= f.label :genre_id %>
  <%= f.collection_select :genre_id, Genre.all, :name, :name %>
  <!-- https://apidock.com/rails/ActionView/Helpers/FormOptionsHelper/collection_select -->
  </div><br>

  <label for="song_notes_1">Song note: </label>
  <input id="song_notes_1" name="song[note_contents][]"><br>
  <label for="song_notes_2">Another song note: </label>
  <input id="song_notes_2" name="song[note_contents][]"><br>

  <%= f.submit %>
<% end %>
